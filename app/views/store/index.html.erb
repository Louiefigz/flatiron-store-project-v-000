<%if current_user %>
  <h1>Welcome <%= current_user.email %></h1>
<% end %>



<% @categories.each do |category| %>
  <%= link_to category.title, category_path(category) %>

<% end %>

<% @items.available_items.each do |item| %>
  <p><%= item.title %> | $<%= item.price.to_f/100 %> | <%= number_to_currency(item.price) %> | <%= button_to 'Add to Cart', line_items_path(item_id: item) %></p>
<% end %>
